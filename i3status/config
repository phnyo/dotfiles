# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#59b9c6"
        color_degraded = "#aacf53"
        color_bad = "#9a493f"
        color_separator = "#96514d"
        interval = 1
}

order += "read_file weather"
order += "cpu_usage"
order += "memory"
order += "battery all"
order += "tztime local"
order += "wireless _first_"
order += "volume master"

read_file weather {
        format = "%content"
        path = ".cache/weather/weather.log"
        separator = false
}

cpu_usage {
        format = "CPU %usage" 
        max_threshold = 75
        separator = false
}

memory {
        format = "mem %used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
        separator = false
}

battery all {
        format = "%status%percentage %remaining"
        status_chr = "cha "
        status_full ="ful "
        status_bat ="ðŸ”‹"
        separator = false
}

tztime local {
        format = "%Y/%m/%d %H:%M:%S JST"
	      separator = false
}

wireless _first_ {
        format_up  = "wlan:%essid %bitrate @%ip"
        format_down = "No wifi :<"
        separator = false
        min_width = 30
}

volume master {
        format = "ðŸ”Š%volume"
        format_muted = "mut "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
	separator = false
}

