# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#59b9c6"
        color_degraded = "#aacf53"
        color_bad = "#9a493f"
        color_separator = "#96514d"
        interval = 3
}

order += "read_file spotify"
order += "read_file weather"
order += "cpu_usage"
order += "memory"
order += "battery all"
order += "tztime local"
order += "wireless _first_"
order += "volume master"

read_file spotify {
        format = " %content"
        path = "/home/n/.cache/spotify/spotify.log"
        separator = false
}

read_file weather {
        format = " %content"
        path = "/home/n/.cache/weather/weather.log"
        separator = false
}

cpu_usage {
        format = "CPU %usage" 
        max_threshold = 75
        separator = false
}

memory {
        format = " %used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
        separator = false
}

battery all {
        format = "%status%percentage %remaining"
        status_chr = ""
        status_full =" "
        status_bat =" "
        separator = false
}

tztime local {
        format = " %Y-%m-%d %H:%M JST"
	      separator = false
}

wireless _first_ {
        format_up  = " %bitrate"
        format_down = "No wifi :<"
        separator = false
}

volume master {
        format = "%volume"
        format_muted = " "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
	separator = false
}
